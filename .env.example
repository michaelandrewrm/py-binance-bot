# Environment Configuration Example
# Copy this file to .env and fill in your actual values
# Never commit .env files with real secrets to version control

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=dev
# Options: dev, development, stage, staging, prod, production

# =============================================================================
# BINANCE API CONFIGURATION (Required for live trading)
# =============================================================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true
# Get your API keys from: https://testnet.binance.vision/ (testnet) or https://binance.com (live)

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///trading_bot.db
# Examples:
# SQLite: sqlite:///trading_bot.db
# PostgreSQL: postgresql://username:password@localhost:5432/trading_bot
# MySQL: mysql://username:password@localhost:3306/trading_bot

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=trading_bot.log
LOGGING__MAX_FILE_SIZE_MB=10
LOGGING__BACKUP_COUNT=5

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_TIMEFRAME=5m
TRADING__MAX_POSITION_SIZE=1000
TRADING__RISK_PERCENTAGE=0.02
TRADING__FEE_PERCENTAGE=0.001

# =============================================================================
# GRID TRADING CONFIGURATION
# =============================================================================
GRID__N_GRIDS=12
GRID__INVEST_PER_GRID=50.0
GRID__GRID_SPACING_PCT=0.01
# GRID__UPPER_PRICE=55000.0  # Optional: Set upper price boundary
# GRID__LOWER_PRICE=45000.0  # Optional: Set lower price boundary
GRID__REBALANCE_ENABLED=true

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
AI__ENABLED=true
AI__MODEL_TYPE=lstm
AI__N_STEPS=60
AI__EPOCHS=30
AI__BATCH_SIZE=32
AI__VALIDATION_SPLIT=0.1
AI__EARLY_STOPPING_PATIENCE=5

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE__DIR=data_cache
CACHE__MAX_AGE_HOURS=24
CACHE__MAX_SIZE_MB=500
CACHE__ENABLED=true

# =============================================================================
# SECURITY CONFIGURATION (Important: Keep these secret!)
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_random
ENCRYPTION_KEY=your_32_byte_encryption_key_here_12
# Generate strong keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"

SECURITY__SESSION_TIMEOUT_MINUTES=60

# =============================================================================
# NOTIFICATION CONFIGURATION (Optional)
# =============================================================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
NOTIFICATIONS__TELEGRAM_ENABLED=false
# Get bot token from: https://t.me/BotFather
# Get chat ID by messaging your bot and visiting: https://api.telegram.org/bot<YourBOTToken>/getUpdates

# Email Configuration
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_app_password_here
NOTIFICATIONS__EMAIL_ENABLED=false
NOTIFICATIONS__EMAIL_SMTP_SERVER=smtp.gmail.com
NOTIFICATIONS__EMAIL_SMTP_PORT=587

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=py-binance-bot
VERSION=1.0.0
DEBUG=false

# =============================================================================
# DEVELOPMENT OVERRIDES (Only used when ENVIRONMENT=dev)
# =============================================================================
# These can be set to override config.yaml values during development
# DEV_MAX_POSITION_SIZE=100
# DEV_GRID_COUNT=5

# =============================================================================
# PRODUCTION OVERRIDES (Only used when ENVIRONMENT=prod)
# =============================================================================
# PROD_LOG_LEVEL=WARNING
# PROD_RATE_LIMIT=1000

# =============================================================================
# CUSTOM OVERRIDES
# =============================================================================
# You can override any configuration value using the nested delimiter '__'
# Examples:
# DATABASE__ECHO=true
# BINANCE__RATE_LIMIT_REQUESTS_PER_MINUTE=800
# LOGGING__FORMAT="%(asctime)s [%(levelname)s] %(name)s: %(message)s"

# Development/Testing
DEBUG=false
ENABLE_PAPER_TRADING=true
